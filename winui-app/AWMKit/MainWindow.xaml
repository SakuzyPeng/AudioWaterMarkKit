<Window
    x:Class="AWMKit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Custom title bar -->
            <RowDefinition Height="48"/>
            <!-- Main content -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar with Status Indicators -->
        <Grid x:Name="AppTitleBar" Grid.Row="0" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- App Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                <Image Source="Assets/AppIcon.png" Width="16" Height="16" Margin="0,0,8,0"/>
                <TextBlock Text="AWMKit" Style="{StaticResource CaptionTextBlockStyle}" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Status Indicators (Right-aligned) -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" Margin="0,0,16,0" VerticalAlignment="Center">
                <!-- Key Status -->
                <InfoBadge x:Name="KeyStatusBadge"
                           Style="{StaticResource AttentionDotInfoBadgeStyle}"
                           ToolTipService.ToolTip="Key Status"/>

                <!-- Engine Status -->
                <InfoBadge x:Name="EngineStatusBadge"
                           Style="{StaticResource AttentionDotInfoBadgeStyle}"
                           ToolTipService.ToolTip="Audio Engine Status"/>

                <!-- Database Status -->
                <InfoBadge x:Name="DatabaseStatusBadge"
                           Style="{StaticResource AttentionDotInfoBadgeStyle}"
                           ToolTipService.ToolTip="Database Status"/>
            </StackPanel>
        </Grid>

        <!-- Main Navigation -->
        <NavigationView x:Name="MainNavigation"
                        Grid.Row="1"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="False"
                        PaneDisplayMode="Top"
                        SelectionChanged="MainNavigation_SelectionChanged">

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Embed" Tag="embed">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE710;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Detect" Tag="detect">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE71C;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Tags" Tag="tags">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE1CB;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame"/>
        </NavigationView>
    </Grid>
</Window>
