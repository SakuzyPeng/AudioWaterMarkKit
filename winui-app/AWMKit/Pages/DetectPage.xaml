<Page
    x:Class="AWMKit.Pages.DetectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AWMKit.Models"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24" MaxWidth="900">
            <!-- Page Header -->
            <TextBlock Text="Detect Watermark" Style="{StaticResource TitleTextBlockStyle}"/>

            <!-- File Selection -->
            <Border Style="{StaticResource CardBorderStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Input Files" Style="{StaticResource SectionHeaderStyle}"/>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Add Files"
                                Click="AddFilesButton_Click"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                        <Button Content="Clear All"
                                Command="{x:Bind ViewModel.ClearAllCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>

                    <ListView ItemsSource="{x:Bind ViewModel.InputFiles}"
                              Height="120"
                              BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                              BorderThickness="1"
                              CornerRadius="4">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{x:Bind}" VerticalAlignment="Center"/>
                                    <Button Grid.Column="1"
                                            Content="&#xE711;"
                                            FontFamily="Segoe Fluent Icons"
                                            Click="RemoveFileButton_Click"
                                            Tag="{x:Bind}"
                                            Background="Transparent"
                                            BorderThickness="0"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <CheckBox Content="Auto-save evidence to database"
                              IsChecked="{x:Bind ViewModel.AutoSaveEvidence, Mode=TwoWay}"/>
                </StackPanel>
            </Border>

            <!-- Progress Section -->
            <Border Style="{StaticResource CardBorderStyle}"
                    Visibility="{x:Bind ViewModel.IsProcessing, Mode=OneWay}">
                <StackPanel Spacing="8">
                    <TextBlock Text="Processing..." Style="{StaticResource SectionHeaderStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.CurrentFile, Mode=OneWay}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <ProgressBar Value="{x:Bind ViewModel.ProcessedCount, Mode=OneWay}"
                                 Maximum="{x:Bind ViewModel.TotalCount, Mode=OneWay}"
                                 Style="{StaticResource ProcessProgressBarStyle}"/>
                    <TextBlock>
                        <Run Text="{x:Bind ViewModel.ProcessedCount, Mode=OneWay}"/>
                        <Run Text="/"/>
                        <Run Text="{x:Bind ViewModel.TotalCount, Mode=OneWay}"/>
                        <Run Text="files processed"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Detect Watermark"
                        Command="{x:Bind ViewModel.DetectCommand}"
                        IsEnabled="{x:Bind ViewModel.CanDetect, Mode=OneWay}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>

            <!-- Results Section -->
            <Border Style="{StaticResource CardBorderStyle}"
                    Visibility="{x:Bind ViewModel.Results.Count, Converter={StaticResource CountToVisibilityConverter}, Mode=OneWay}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Detection Results" Style="{StaticResource SectionHeaderStyle}"/>

                    <ListView ItemsSource="{x:Bind ViewModel.Results}"
                              SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:DetectResult">
                                <Border Style="{StaticResource ListItemBorderStyle}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- File Path -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="File:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Bind FilePath}" TextWrapping="Wrap"/>

                                        <!-- Status -->
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Status:" FontWeight="SemiBold" Margin="0,4,0,0"/>
                                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                            <InfoBadge Background="{x:Bind Success, Converter={StaticResource BoolToSuccessColorConverter}}"
                                                       Style="{StaticResource AttentionDotInfoBadgeStyle}"/>
                                            <TextBlock Text="{x:Bind Success, Converter={StaticResource BoolToDetectionTextConverter}}"/>
                                        </StackPanel>

                                        <!-- Tag -->
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Tag:" FontWeight="SemiBold" Margin="0,4,0,0"
                                                   Visibility="{x:Bind Success}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{x:Bind Tag}" Margin="0,4,0,0"
                                                   Visibility="{x:Bind Success}"/>

                                        <!-- Identity -->
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Identity:" FontWeight="SemiBold" Margin="0,4,0,0"
                                                   Visibility="{x:Bind Identity, Converter={StaticResource NullToCollapsedConverter}}"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Margin="0,4,0,0"
                                                   Visibility="{x:Bind Identity, Converter={StaticResource NullToCollapsedConverter}}">
                                            <Run Text="{x:Bind Identity}"/>
                                            <Run Text=" "/>
                                            <Run Text="{x:Bind DisplayName, Converter={StaticResource DisplayNameConverter}}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </TextBlock>

                                        <!-- Pattern -->
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Pattern:" FontWeight="SemiBold" Margin="0,4,0,0"
                                                   Visibility="{x:Bind Success}"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{x:Bind Pattern}" Margin="0,4,0,0"
                                                   Visibility="{x:Bind Success}"/>

                                        <!-- Detect Score -->
                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Detect Score:" FontWeight="SemiBold" Margin="0,4,0,0"
                                                   Visibility="{x:Bind DetectScore, Converter={StaticResource NullToCollapsedConverter}}"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{x:Bind DetectScoreText}" Margin="0,4,0,0"
                                                   Visibility="{x:Bind DetectScore, Converter={StaticResource NullToCollapsedConverter}}"/>

                                        <!-- Clone Check -->
                                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Clone Check:" FontWeight="SemiBold" Margin="0,4,0,0"
                                                   Visibility="{x:Bind CloneCheck, Converter={StaticResource NullToCollapsedConverter}}"/>
                                        <TextBlock Grid.Row="6" Grid.Column="1" Margin="0,4,0,0"
                                                   Visibility="{x:Bind CloneCheck, Converter={StaticResource NullToCollapsedConverter}}">
                                            <Run Text="{x:Bind CloneCheckText}"/>
                                            <Run Text=" "/>
                                            <Run Text="{x:Bind CloneScoreText}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </TextBlock>

                                        <!-- Error -->
                                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Error:" FontWeight="SemiBold" Margin="0,4,0,0"
                                                   Visibility="{x:Bind ErrorMessage, Converter={StaticResource NullToCollapsedConverter}}"/>
                                        <TextBlock Grid.Row="7" Grid.Column="1" Text="{x:Bind ErrorMessage}" Margin="0,4,0,0"
                                                   Foreground="{StaticResource ErrorBrush}"
                                                   Visibility="{x:Bind ErrorMessage, Converter={StaticResource NullToCollapsedConverter}}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
