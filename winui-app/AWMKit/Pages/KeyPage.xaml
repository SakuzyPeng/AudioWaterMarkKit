<Page
    x:Class="AWMKit.Pages.KeyPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">
    <Page.Resources>
        <Style x:Key="KeyHeaderBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource ControlFillColorSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="2,2,2,0"/>
        </Style>
    </Page.Resources>

    <Grid Padding="24" ColumnSpacing="12" Background="{ThemeResource PageBackdropBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}" Padding="20">
            <Grid RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource KeyHeaderBorderStyle}">
                    <TextBlock Text="密钥管理" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                </Border>

                <InfoBar Grid.Row="2"
                         IsClosable="False"
                         Severity="{x:Bind KeyStatusSeverity, Mode=OneWay}"
                         Message="{x:Bind KeyStatusMessage, Mode=OneWay}"/>

                <Border Grid.Row="3" Style="{StaticResource ListItemBorderStyle}">
                    <StackPanel Spacing="8">
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="96"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="密钥状态"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Column="1"
                                       Text="{x:Bind ViewModel.KeyStatusText, Mode=OneWay}"
                                       Foreground="{x:Bind ViewModel.KeyStatusBrush, Mode=OneWay}"/>
                        </Grid>
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="96"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="密钥来源"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Column="1"
                                       Text="{x:Bind ViewModel.KeySourceLabel, Mode=OneWay}"
                                       TextWrapping="WrapWholeWords"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Grid.Row="4" Style="{StaticResource ListItemBorderStyle}">
                    <StackPanel Spacing="8">
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="96"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="激活槽位"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                                <ComboBox Width="120"
                                          ItemsSource="{x:Bind ViewModel.SlotOptions, Mode=OneWay}"
                                          SelectedItem="{x:Bind ViewModel.SelectedSlot, Mode=TwoWay}"/>
                                <Button Click="ApplySlotButton_Click"
                                        IsEnabled="{x:Bind IsNotBusy, Mode=OneWay}">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <SymbolIcon Symbol="AllApps"
                                                    Foreground="{x:Bind ViewModel.ApplyActionBrush, Mode=OneWay}"/>
                                        <TextBlock Text="应用"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <TextBlock Text="{x:Bind ViewModel.ActiveKeySlotText, Mode=OneWay}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="5" Style="{StaticResource ListItemBorderStyle}">
                    <StackPanel Spacing="4">
                        <TextBlock Text="当前激活密钥"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <SymbolIcon Symbol="AllApps"
                                        Foreground="{x:Bind ViewModel.ActiveSummaryTitleBrush, Mode=OneWay}"/>
                            <TextBlock Text="{x:Bind ViewModel.ActiveSummaryTitle, Mode=OneWay}"
                                       FontWeight="SemiBold"
                                       Foreground="{x:Bind ViewModel.ActiveSummaryTitleBrush, Mode=OneWay}"/>
                        </StackPanel>
                        <TextBlock Text="{x:Bind ViewModel.ActiveSummaryKeyLine, Mode=OneWay}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{x:Bind ViewModel.ActiveSummaryEvidenceLine, Mode=OneWay}"
                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="6" Spacing="10">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Click="GenerateKeyButton_Click"
                                Style="{StaticResource PrimaryButtonStyle}"
                                IsEnabled="{x:Bind CanGenerateKey, Mode=OneWay}">
                            <ToolTipService.ToolTip>
                                <TextBlock Text="{x:Bind GenerateKeyTooltip, Mode=OneWay}"/>
                            </ToolTipService.ToolTip>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <SymbolIcon Symbol="Permissions"
                                            Foreground="{x:Bind ViewModel.GenerateActionBrush, Mode=OneWay}"/>
                                <TextBlock Text="生成"/>
                            </StackPanel>
                        </Button>

                        <Button Click="EditLabelButton_Click"
                                Style="{StaticResource SecondaryButtonStyle}"
                                IsEnabled="{x:Bind IsNotBusy, Mode=OneWay}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <SymbolIcon Symbol="Tag"
                                            Foreground="{x:Bind ViewModel.EditActionBrush, Mode=OneWay}"/>
                                <TextBlock Text="编辑"/>
                            </StackPanel>
                        </Button>

                        <Button Click="DeleteKeyButton_Click"
                                Style="{StaticResource SecondaryButtonStyle}"
                                IsEnabled="{x:Bind ViewModel.SelectedSlotHasKey, Mode=OneWay}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <SymbolIcon Symbol="Delete"
                                            Foreground="{x:Bind ViewModel.DeleteActionBrush, Mode=OneWay}"/>
                                <TextBlock Text="删除"/>
                            </StackPanel>
                        </Button>

                        <Button Click="RefreshButton_Click"
                                Style="{StaticResource SecondaryButtonStyle}"
                                IsEnabled="{x:Bind IsNotBusy, Mode=OneWay}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <SymbolIcon Symbol="Refresh"
                                            Foreground="{x:Bind ViewModel.RefreshActionBrush, Mode=OneWay}"/>
                                <TextBlock Text="刷新"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}" Padding="20">
            <Grid RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource KeyHeaderBorderStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="槽位摘要"
                                   Style="{StaticResource SectionHeaderStyle}"
                                   Margin="0"/>

                        <Border Grid.Column="1"
                                Background="{ThemeResource ControlFillColorSecondaryBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="8,4"
                                VerticalAlignment="Center"
                                Visibility="{x:Bind ViewModel.ShowConfiguredSlotCount, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{x:Bind ViewModel.ConfiguredSlotCountText, Mode=OneWay}"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </Grid>
                </Border>

                <TextBox Grid.Row="1"
                         PlaceholderText="搜索槽位 / Key ID / 标签 / 状态"
                         Text="{x:Bind ViewModel.SlotSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <ListView Grid.Row="2"
                          ItemsSource="{x:Bind ViewModel.FilteredSlotSummaries, Mode=OneWay}"
                          SelectionMode="None"
                          IsItemClickEnabled="False"
                          ScrollViewer.VerticalScrollMode="Enabled"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollMode="Disabled"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Spacing="2" Padding="8,6">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <SymbolIcon Symbol="AllApps"
                                                Foreground="{Binding IsActive, Converter={StaticResource BoolToKeySlotIconBrushConverter}}"/>
                                    <TextBlock Text="{Binding TitleWithStatus}"
                                               FontWeight="SemiBold"
                                               Foreground="{Binding StatusText, Converter={StaticResource KeySlotStatusBrushConverter}}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding KeyLine}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{Binding EvidenceLine}"
                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                           FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Page>
