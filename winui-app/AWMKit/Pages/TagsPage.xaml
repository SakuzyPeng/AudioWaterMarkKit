<Page
    x:Class="AWMKit.Pages.TagsPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AWMKit.Models"
    mc:Ignorable="d"
    Loaded="Page_Loaded">
    <Page.Resources>
        <SolidColorBrush x:Key="TagsPageBackdropBrush" Color="#0D5B9BFF"/>
        <Style x:Key="CapsuleListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="UseSystemFocusVisuals" Value="False"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="CapsuleGridViewItemStyle" TargetType="GridViewItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="UseSystemFocusVisuals" Value="False"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Page.Resources>

    <Grid Padding="24" RowSpacing="12" Background="{StaticResource TagsPageBackdropBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Padding="14">
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         PlaceholderText="搜索用户名 / Tag / Identity / 路径"
                         Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <ComboBox Grid.Column="1"
                          SelectedIndex="{x:Bind ViewModel.SearchScopeIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="全部"/>
                    <ComboBoxItem Content="映射"/>
                    <ComboBoxItem Content="证据"/>
                </ComboBox>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Border Style="{StaticResource ListItemBorderStyle}" Padding="8,4">
                        <TextBlock Text="{x:Bind ViewModel.MappingTotalBadgeText, Mode=OneWay}"/>
                    </Border>
                    <Border Style="{StaticResource ListItemBorderStyle}" Padding="8,4">
                        <TextBlock Text="{x:Bind ViewModel.EvidenceTotalBadgeText, Mode=OneWay}"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" Spacing="8">
            <InfoBar Severity="Error"
                     Title="操作失败"
                     Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                     IsOpen="{x:Bind ViewModel.HasErrorMessage, Mode=OneWay}"
                     IsClosable="True"
                     CloseButtonClick="ErrorInfoBar_CloseButtonClick"/>
            <InfoBar Severity="Success"
                     Title="操作提示"
                     Message="{x:Bind ViewModel.InfoMessage, Mode=OneWay}"
                     IsOpen="{x:Bind ViewModel.HasInfoMessage, Mode=OneWay}"
                     IsClosable="True"
                     CloseButtonClick="InfoInfoBar_CloseButtonClick"/>
        </StackPanel>

        <Grid Grid.Row="2" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Style="{StaticResource CardBorderStyle}"
                    Padding="12"
                    Visibility="{x:Bind ViewModel.ShowMappingsPanel, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="标签映射" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        <Border Grid.Column="1" Style="{StaticResource ListItemBorderStyle}" Padding="8,4">
                            <TextBlock Text="{x:Bind ViewModel.MappingSummaryText, Mode=OneWay}"/>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1">
                        <TextBlock Text="{x:Bind ViewModel.MappingEmptyHint, Mode=OneWay}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Visibility="{x:Bind ViewModel.ShowMappingEmptyHint, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <GridView ItemsSource="{x:Bind ViewModel.FilteredMappings, Mode=OneWay}"
                                  IsItemClickEnabled="True"
                                  ItemClick="MappingsListView_ItemClick"
                                  ItemContainerStyle="{StaticResource CapsuleGridViewItemStyle}"
                                  SelectionMode="None"
                                  IsSwipeEnabled="False"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  ScrollViewer.HorizontalScrollMode="Disabled"
                                  Visibility="{x:Bind ViewModel.ShowMappingEmptyHint, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal" ItemWidth="240"/>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                            <GridView.Resources>
                                <SolidColorBrush x:Key="ListViewItemBackground" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBackgroundPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBackgroundPressed" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBackgroundSelected" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPressed" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBorderBrush" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBorderBrushPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="GridViewItemBackground" Color="Transparent"/>
                                <SolidColorBrush x:Key="GridViewItemBackgroundPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="GridViewItemBackgroundPressed" Color="Transparent"/>
                                <SolidColorBrush x:Key="GridViewItemBackgroundSelected" Color="Transparent"/>
                                <SolidColorBrush x:Key="GridViewItemBackgroundSelectedPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="GridViewItemBackgroundSelectedPressed" Color="Transparent"/>
                                <SolidColorBrush x:Key="GridViewItemBorderBrush" Color="Transparent"/>
                                <SolidColorBrush x:Key="GridViewItemBorderBrushPointerOver" Color="Transparent"/>
                            </GridView.Resources>
                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="models:TagMapping">
                                    <Border Margin="0,0,8,8"
                                            Padding="9"
                                            CornerRadius="8"
                                            BorderThickness="1"
                                            BorderBrush="{x:Bind IsSelected, Converter={StaticResource BoolToSelectionBorderBrushConverter}}"
                                            Background="{x:Bind IsSelected, Converter={StaticResource BoolToSelectionBackgroundBrushConverter}}">
                                        <Grid ColumnSpacing="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <FontIcon Glyph="&#xE77B;" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <StackPanel Grid.Column="1" Spacing="2">
                                                <TextBlock Text="{x:Bind Username}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{x:Bind Tag}" FontFamily="Consolas" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                <FontIcon Glyph="&#xE73E;"
                                                          HorizontalAlignment="Center"
                                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                          Visibility="{x:Bind IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                <TextBlock Text="{x:Bind CreatedAt, Converter={StaticResource ChineseThreeLineDateTimeConverter}}"
                                                           FontSize="11"
                                                           TextAlignment="Center"
                                                           TextWrapping="Wrap"
                                                           Width="90"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="1"
                    Style="{StaticResource CardBorderStyle}"
                    Padding="12"
                    Visibility="{x:Bind ViewModel.ShowEvidencePanel, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="音频证据" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        <Border Grid.Column="1" Style="{StaticResource ListItemBorderStyle}" Padding="8,4">
                            <TextBlock Text="{x:Bind ViewModel.EvidenceSummaryText, Mode=OneWay}"/>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1">
                        <TextBlock Text="{x:Bind ViewModel.EvidenceEmptyHint, Mode=OneWay}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Visibility="{x:Bind ViewModel.ShowEvidenceEmptyHint, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <ListView ItemsSource="{x:Bind ViewModel.FilteredEvidence, Mode=OneWay}"
                                  IsItemClickEnabled="True"
                                  ItemClick="EvidenceListView_ItemClick"
                                  ItemContainerStyle="{StaticResource CapsuleListViewItemStyle}"
                                  SelectionMode="None"
                                  Visibility="{x:Bind ViewModel.ShowEvidenceEmptyHint, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <ListView.Resources>
                                <SolidColorBrush x:Key="ListViewItemBackground" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBackgroundPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBackgroundPressed" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBackgroundSelected" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPressed" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBorderBrush" Color="Transparent"/>
                                <SolidColorBrush x:Key="ListViewItemBorderBrushPointerOver" Color="Transparent"/>
                            </ListView.Resources>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:EvidenceRecord">
                                    <Border Margin="0,0,0,8"
                                            Padding="12"
                                            CornerRadius="8"
                                            BorderThickness="1"
                                            BorderBrush="{x:Bind IsSelected, Converter={StaticResource BoolToSelectionBorderBrushConverter}}"
                                            Background="{x:Bind IsSelected, Converter={StaticResource BoolToSelectionBackgroundBrushConverter}}">
                                        <Grid ColumnSpacing="10" RowSpacing="4">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <FontIcon Grid.RowSpan="3"
                                                      Glyph="&#xE8D6;"
                                                      VerticalAlignment="Center"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Grid.Column="1" Text="{x:Bind Identity}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="2"
                                                       Grid.RowSpan="3"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,10,0,0"
                                                       Width="90"
                                                       Text="{x:Bind CreatedAtDateTime, Converter={StaticResource ChineseThreeLineDateTimeConverter}}"
                                                       FontSize="11"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{x:Bind TagSlotDisplayText}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{x:Bind FilePath}" TextTrimming="CharacterEllipsis" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <FontIcon Grid.Column="2"
                                                      Grid.Row="0"
                                                      Glyph="&#xE73E;"
                                                      HorizontalAlignment="Right"
                                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                      Visibility="{x:Bind IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="3" Style="{StaticResource CardBorderStyle}" Padding="12">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            Spacing="8"
                            Visibility="{x:Bind ViewModel.IsNormalMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Content="添加映射"
                            Click="AddMappingButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            IsEnabled="{x:Bind ViewModel.CanOpenAddDialog, Mode=OneWay}"/>
                    <Button Content="删除标签"
                            Click="EnterDeleteMappingsModeButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            IsEnabled="{x:Bind ViewModel.CanEnterMappingsDeleteMode, Mode=OneWay}"/>
                    <Button Content="删除证据"
                            Click="EnterDeleteEvidenceModeButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            IsEnabled="{x:Bind ViewModel.CanEnterEvidenceDeleteMode, Mode=OneWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Spacing="8"
                            Visibility="{x:Bind ViewModel.IsMappingsDeleteMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Content="退出删除"
                            Click="ExitDeleteModeButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="全选"
                            Click="SelectAllButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            IsEnabled="{x:Bind ViewModel.CanSelectAll, Mode=OneWay}"/>
                    <Button Content="全不选"
                            Click="ClearSelectionButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            IsEnabled="{x:Bind ViewModel.CanClearSelection, Mode=OneWay}"/>
                    <Button Content="执行删除"
                            Click="ExecuteDeleteButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            IsEnabled="{x:Bind ViewModel.CanExecuteDelete, Mode=OneWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Spacing="8"
                            Visibility="{x:Bind ViewModel.IsEvidenceDeleteMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Content="退出删除"
                            Click="ExitDeleteModeButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="全选"
                            Click="SelectAllButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            IsEnabled="{x:Bind ViewModel.CanSelectAll, Mode=OneWay}"/>
                    <Button Content="全不选"
                            Click="ClearSelectionButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            IsEnabled="{x:Bind ViewModel.CanClearSelection, Mode=OneWay}"/>
                    <Button Content="执行删除"
                            Click="ExecuteDeleteButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            IsEnabled="{x:Bind ViewModel.CanExecuteDelete, Mode=OneWay}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
