<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Spacing Tokens (8px grid) -->
    <x:Double x:Key="SpacingXS">4</x:Double>
    <x:Double x:Key="SpacingSM">8</x:Double>
    <x:Double x:Key="SpacingMD">16</x:Double>
    <x:Double x:Key="SpacingLG">24</x:Double>
    <x:Double x:Key="SpacingXL">32</x:Double>

    <!-- Corner Radius Tokens -->
    <CornerRadius x:Key="CornerRadiusSM">4</CornerRadius>
    <CornerRadius x:Key="CornerRadiusMD">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLG">12</CornerRadius>

    <!-- Theme-aware semantic colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{ThemeResource AWMSuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{ThemeResource AWMWarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{ThemeResource AWMErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{ThemeResource AWMInfoColor}"/>
    <SolidColorBrush x:Key="NeutralBrush" Color="{ThemeResource AWMNeutralColor}"/>
    <SolidColorBrush x:Key="YellowBrush" Color="{ThemeResource AWMYellowColor}"/>
    <SolidColorBrush x:Key="PageBackdropBrush" Color="{ThemeResource AWMPageBackdropColor}"/>
    <SolidColorBrush x:Key="SelectionBackgroundBrush" Color="{ThemeResource AWMSelectionBackgroundColor}"/>
    <SolidColorBrush x:Key="SelectionBorderBrush" Color="{ThemeResource AWMSelectionBorderColor}"/>
    <SolidColorBrush x:Key="ListItemPointerOverBrush" Color="{ThemeResource AWMListItemPointerOverColor}"/>
    <SolidColorBrush x:Key="ListItemPressedBrush" Color="{ThemeResource AWMListItemPressedColor}"/>
    <SolidColorBrush x:Key="ListItemSelectedBrush" Color="{ThemeResource AWMListItemSelectedColor}"/>
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>

    <!-- Status colors -->
    <SolidColorBrush x:Key="KeyStatusBrush" Color="{ThemeResource AWMSuccessColor}"/>
    <SolidColorBrush x:Key="EngineStatusBrush" Color="{ThemeResource AWMInfoColor}"/>
    <SolidColorBrush x:Key="DatabaseStatusBrush" Color="{ThemeResource AWMWarningColor}"/>
    <SolidColorBrush x:Key="UnavailableStatusBrush" Color="{ThemeResource AWMNeutralColor}"/>

    <!-- Card Style -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMD}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingMD}"/>
    </Style>

    <!-- Section Header Style -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Label Style -->
    <Style x:Key="LabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!-- Form Input Style -->
    <Style x:Key="FormTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource DefaultTextBoxStyle}">
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Primary Button Style -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Padding" Value="16,8"/>
    </Style>

    <!-- Secondary Button Style -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <!-- Progress Bar Style -->
    <Style x:Key="ProcessProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Height" Value="4"/>
        <Setter Property="Margin" Value="0,8,0,8"/>
        <Setter Property="Foreground" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
    </Style>

    <!-- List Item Style -->
    <Style x:Key="ListItemBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SubtleFillColorTransparentBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="MinHeight" Value="48"/>
    </Style>
</ResourceDictionary>
